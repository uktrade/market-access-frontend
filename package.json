{
  "name": "market-access-frontend",
  "version": "5.12.2",
  "description": "A front end for Market Access",
  "main": "server.js",
  "engines": {
    "node": "10.15.1",
    "npm": "6.4.1"
  },
  "scripts": {
    "preversion": "npm run lint:app && npm run lint:public && npm test && npm run coverage",
    "postversion": "git push && git push --tags",
    "start": "NODE_ENV=production node --use-strict dist/server.js",
    "tag-master": "git tag v${npm_package_version}-master && git push --tags",
    "coverage": "NODE_ENV=development; LOG_LEVEL=error; SSO_BYPASS=true; ASSIGN_DEFAULT_COUNTRY=false; JASMINE_CONFIG_PATH=src/test/app/jasmine.json nyc jasmine",
    "test": "NODE_ENV=development; LOG_LEVEL=error; SSO_BYPASS=true; ASSIGN_DEFAULT_COUNTRY=false; JASMINE_CONFIG_PATH=src/test/app/jasmine.json jasmine",
    "test:health": "node src/test/ci/test-health.js",
    "test:setup": "cd src/test/ci/; ./setup.sh;",
    "test:features": "npm run test:setup; export TEST_BROWSER=chrome; npm run test:health && cucumber-js src/test/ci/features --format json:src/test/ci/output/test-reports/cucumber/results.cucumber",
    "test:features:local": "npm run test:setup; export TEST_HOST=10.200.10.1; export TEST_BROWSER=chrome; cucumber-js src/test/ci/features --format progress-bar --format json:src/test/ci/output/test-reports/cucumber/results.cucumber",
    "watch": "run-p watch:*",
    "watch-stub": "export DATAHUB_STUB=true; npm run watch",
    "watch:node": "export LOG_LEVEL=${LOG_LEVEL:-debug}; nodemon src/app/cluster.js --ignore 'src/public/**/*' --ignore 'src/test/**/*' --ignore 'src/app/**/*.spec.js' --ignore 'src/data/**/*'",
    "debug": "export LOG_LEVEL=debug; export SERVER_WORKERS=1; node --inspect src/app/cluster.js",
    "grunt": "grunt dist",
    "build:dist": "npm run govuk-assets && npm run sass:prod && grunt dist && npm run dist-install",
    "dist-install": "cd dist && npm install --production",
    "dist": "npm run build:dist && npm run start",
    "heroku-postbuild": "npm run build:dist",
    "watch:sass": "npm run sass:dev && node-sass src/public/sass/main.scss src/public/css/main.css --source-map src/public/css/main.css.map --source-map-contents --include-path ./src/public/sass/ --include-path './node_modules/govuk-frontend/' -w -r",
    "sass:dev": "node-sass src/public/sass/main.scss src/public/css/main.css --source-map src/public/css/main.css.map --source-map-contents --include-path ./src/public/sass/ --include-path './node_modules/govuk-frontend/'",
    "sass:prod": "node-sass src/public/sass/main.scss src/public/css/main.css --include-path ./src/public/sass/ --include-path './node_modules/govuk-frontend/' -x --output-style compressed",
    "generate-data": "run-p generate:*",
    "generate:backend": "node src/data/faker/backend.js",
    "generate:datahub": "node src/data/faker/datahub.js",
    "lint": "run-p lint:*",
    "lint:app": "eslint src/app",
    "lint:public": "eslint src/public/js --ignore-path src/public/js/.eslintignore",
    "govuk-assets": "mkdir -p src/public/govuk/images; cp node_modules/govuk-frontend/assets/images/* src/public/govuk/images/",
    "backstop:reference": "backstop reference --config=src/test/backstop/backstop.js",
    "backstop:test": "backstop test --config=src/test/backstop/backstop.js",
    "backstop:approve": "backstop approve --config=src/test/backstop/backstop.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uktrade/market-access-frontend.git"
  },
  "author": "Graham Veal",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/uktrade/market-access-frontend/issues"
  },
  "homepage": "https://github.com/uktrade/market-access-frontend#readme",
  "dependencies": {
    "compression": "^1.7.3",
    "connect-flash": "^0.1.1",
    "connect-redis": "^3.4.0",
    "csurf": "^1.9.0",
    "dateformat": "^3.0.3",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "formidable": "^1.2.1",
    "govuk-frontend": "^2.6.0",
    "hawk": "^7.0.10",
    "morgan": "^1.9.1",
    "nunjucks": "^3.1.7",
    "raven": "^2.6.4",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "uuid": "^3.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "axe-webdriverjs": "^2.1.0",
    "backstopjs": "^3.8.8",
    "cucumber": "^4.2.1",
    "eslint": "^5.13.0",
    "faker": "^4.1.0",
    "grunt": "^1.0.3",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-cssmin": "^3.0.0",
    "grunt-contrib-uglify": "^4.0.0",
    "grunt-filerev": "^2.3.1",
    "grunt-mkdir": "^1.0.0",
    "grunt-usemin": "^3.1.1",
    "jasmine": "^3.3.1",
    "jasmine-core": "^3.3.0",
    "json-schema-faker": "^0.5.0-rc9",
    "load-grunt-tasks": "^4.0.0",
    "nock": "^10.0.6",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.2.0",
    "proxyquire": "^2.1.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "supertest": "^3.4.2"
  }
}
