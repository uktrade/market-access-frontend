{
	"uuid": {
		"type": "string",
		"faker": "random.uuid"
	},

	"barrier-code": {
		"type": "string",
		"pattern": "B-[0-9]{2}-[A-Z0-9]{3}"
	},

	"barrier-event": {
		"type": "string",
		"pattern": "REPORT_CREATED|BARRIER_CREATED|BARRIER_STATUS_CHANGE"
	},

	"word": {
		"type": "string",
		"faker": "lorem.word"
	},

	"words": {
		"type": "string",
		"faker": "lorem.words"
	},

	"paragraph": {
		"type": "string",
		"faker": "lorem.paragraph"
	},

	"int": {
		"type": "number",
		"faker": "random.number"
	},

	"small-int": {
		"type": "number",
		"faker": {
			"finance.amount": [ 1, 20, 0 ]
		}
	},

	"past-date": {
		"type": "string",
		"faker": "date.past"
	},

	"boolean": {
		"type": "boolean",
		"faker": "random.boolean"
	},

	"country": {
		"type": "object",
		"required": [ "id", "name", "disabled_on" ],
		"properties": {

			"id": { "$ref": "#/uuid" },

			"name" : {
				"type": "string",
				"faker": "address.country"
			},

			"disabled_on": {
				"oneOf": [
					{ "type": "null" },
					{
						"type": "string",
						"faker": "date.past"
					}
				]
			}
		}
	},

	"sector": {
		"type": "object",
		"required": [ "id", "name", "level", "disabled_on" ],
		"properties": {

			"id": { "$ref": "#/uuid" },
			"name" : { "$ref": "#/words" },
			"level": {
				"enum": [ 0, 1, 2 ]
			},
			"disabled_on": {
				"oneOf": [
					{ "type": "null" },
					{
						"type": "string",
						"faker": "date.past"
					}
				]
			}
		}
	},

	"barrier_type": {
		"type": "object",
		"required": [ "id", "title", "description", "category" ],
		"properties": {

			"id": { "$ref": "#/int" },
			"title": { "$ref": "#/words" },
			"description": { "$ref": "#/paragraph" },
			"category": {
				"type": "string",
				"pattern": "GOODS|SERVICES"
			}
		}
	},

	"priority-code": {
		"type": "string",
		"pattern": "HIGH|MEDIUM|LOW|UNKNOWN"
	},

	"priority": {
		"type": "object",
		"required": [ "code", "name", "order" ],
		"properties": {
			"code": { "$ref": "#/priority-code"},
			"name": { "faker": "lorem.word" },
			"order": { "enum": [ 0, 1, 2, 3 ] }
		}
	},

	"progress": {
		"type": "array",
		"minItems": 4,
		"maxItems": 4,
		"items": {
			"$ref": "#/progress-item"
		}
	},

	"progress-item": {
		"type": "object",
		"required": [ "stage_code", "stage_desc", "status_id", "status_desc" ],
		"properties": {

			"stage_code": {
				"type": "string",
				"enum": [ "1.1", "1.2", "1.3", "1.4" ]
			},

			"stage_desc": {
				"type": "string",
				"faker": "lorem.words"
			},

			"status_id": {
				"type": "number",
				"enum": [ 1, 2, 3 ]
			},

			"status_desc": {
				"type": "string",
				"pattern": "COMPLETED|IN PROGRESS"
			}
		}
	}
}
